@model IEnumerable<WebTech.Models.ORDERDETAIL>

@{
    ViewBag.Title = "Index";
    Layout = null;
}


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<!--BOOTSTRAP-->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
<link rel="stylesheet" href="bootstrap/css/bootstrap.min.css" type="text/css">
<script src="js/jquery-3.5.1.min.js"></script>

<!-- CSS-->
<link href="~/MyCss/DonHang.css" type="text/css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


<div box="container">
    <div class="thongtin">
        <p style="font-size:30px;">  ZONE 14.COM </p>
        <div class="header"><strong> THÔNG TIN GIAO HÀNG</strong></div>
        <img src="#" width="50px" />
        <span style="margin-left:-30px">@Session["NAMECUS"] (@Session["USERNAME"])</span>

        <p>Tên người nhận: @Session["NAMECUSTOMER"]</p>
        <p>Địa chỉ: @Session["ORDER_ADDRESS"]</p>
        <p>Số điện thoại: @Session["SDT"]</p>

        <br /><br /><br />

    </div>
    <div class="donhang">
        <div class="header">
            <strong>THÔNG TIN ĐƠN HÀNG</strong>
            <table class="table-bordered" style="text-align:center;">
                <tr>
                    <th>Sản phẩm</th>
                    <th style="width:200px;">Tên sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Giá tiền</th>
                    <th>Thành tiền</th>
                </tr>
                @foreach (var item in Model)
                {
                    double total = (double)item.Quantity * (double)item.UnitPrice;
                    double onepro = (double)item.Quantity * (double)item.UnitPrice;

                    <tr>
                        <td><img src="~/Images/@item.PRODUCT.IMAGE" width="70px" /></td>
                        <td>@item.PRODUCT.NAME_PRO</td>
                        <td>@item.Quantity</td>
                        <td>@item.PRODUCT.PRICE</td>
                        <td>@onepro.ToString("#,##0").Replace(',', '.')</td>
                    </tr>

                }
            </table>
        </div>
    </div>
    <div>
        <strong style="font-size:50px">Tổng tiền</strong>
        <span style="float:right;font-size:50px">@Session["PRICE"]đ</span>
    </div>
</div>
