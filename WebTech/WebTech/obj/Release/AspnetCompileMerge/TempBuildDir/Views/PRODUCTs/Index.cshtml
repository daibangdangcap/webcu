@model IEnumerable<WebTech.Models.PRODUCT>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/MyCss/Admin.css" rel="stylesheet" type="text/css" />

<div class="afheader">
    <button><a href="@Url.Action("Create","PRODUCTs")" style="text-decoration: none; color: aliceblue;">THÊM SP MỚI</a></button>
    <p>  QUẢN LÝ SẢN PHẨM</p>
</div>
<div class="mid">
    <table class="table">
        <tr>
            <th>
                Mã sản phẩm
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Loại sản phẩm
            </th>
            <th>
                Ảnh 1
            </th>
            <th>
                Ảnh 2
            </th>
            <th>
                Ảnh 3
            </th>
            <th>
                Gía
            </th>
            <th>
                Số lượng
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID_PRO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NAME_PRO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CATEGORY.NAME_CATE)
                </td>
                <td>
                    <img src="~/Images/@item.IMAGE" width="200" height="200" />
                </td>
                <td>
                    <img src="~/Images/@item.IMAGEL" width="200" height="200" />
                </td>
                <td>
                    <img src="~/Images/@item.IMAGER" width="200" height="200" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PRICE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QUANTITY)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { name = item.NAME_PRO }) |
                    @Html.ActionLink("Details", "Details", new { name = item.NAME_PRO }) |
                    @Html.ActionLink("Delete", "Delete", new { name = item.NAME_PRO })
                </td>
            </tr>
        }

    </table>
</div>