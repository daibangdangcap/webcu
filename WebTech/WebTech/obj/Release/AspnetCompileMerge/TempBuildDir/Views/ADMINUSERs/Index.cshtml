@model IEnumerable<WebTech.Models.ADMINUSER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/MyCss/Admin.css" rel="stylesheet" type="text/css"/>

<div class="afheader">
    <button><a href="@Url.Action("Create","ADMINUSERs")" style="text-decoration: none; color: aliceblue;">THÊM NGƯỜI DÙNG</a></button>
    <p>  QUẢN LÝ ADMIN</p>
</div>
<div class="mid">
    <table class="table">
        <tr>
            <th>
                Tên tài khoản
            </th>
            <th>
                Tên Admin
            </th>
            <th>
                Chức năng
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.USER_AD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NAME)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ROLEUSER.ROLE)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
    </div>